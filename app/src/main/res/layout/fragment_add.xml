                   android:shadowColor="@color/black"
                   android:textColor="@color/black"
                   android:textColorHint="@color/black"
                   android:textSize="6dp"
                   />
           </LinearLayout>

       </LinearLayout>

        <LinearLayout
    android:layout_width="wrap_content"
