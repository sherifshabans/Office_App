                    android:entries="@array/typeOfStations"
                    android:outlineAmbientShadowColor="@color/black"
                    android:shadowColor="@color/black"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="6dp"
                    />
            </LinearLayout>

