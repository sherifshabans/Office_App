<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#D1000000</item>
        <item name="colorPrimaryVariant">#D1000000</item>
        <item name="colorOnPrimary">#D1000000</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#D1000000</item>
        <item name="colorSecondaryVariant">#D1000000</item>
        <item name="colorOnSecondary">#D1000000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerIconStyle</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="DrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.ToDoList." parent="Theme.MaterialComponents">
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    </style>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
    </style>

    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorPrimary">#D1000000</item>
    </style>
</resources>